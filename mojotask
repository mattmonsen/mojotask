            <td>[% row.id %]</td>
            <td>[% row.title %]
            <td>[% row.type %]
            <td>[% row.status %]</td>
            <td>[% row.complex %]</td>
            <td>[% row.created %]</td>
            <td> <a href="/update/[% row.id %]">Edit</a></td>
          </tr>
          [%- END %]
        </table>
[% PROCESS footer.html %]

